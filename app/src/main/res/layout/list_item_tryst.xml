<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             tools:layout_editor_absoluteY="89dp"
                                             tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/tryst_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="Tryst Title"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tryst_taken"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tryst_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tryst Date"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tryst_title"
        app:layout_constraintRight_toLeftOf="@+id/tryst_taken"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/tryst_taken"
        android:layout_width="62dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/taken"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>